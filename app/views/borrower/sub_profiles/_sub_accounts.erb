<div class="widget-box">
  <label><div class="widget-title cursor-pointer">
    <span class="icon">
      <input type="checkbox" name="sub_account" id="online_auction_list_chk" href="#online_auction_list_div" class="toggle" />
    </span>
    <h5>borrowers Sub Account Details</h5>
  </div></label>
  <div class="widget-content nopadding" id="online_auction_list_div" >
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Full name</th>
          <th>Email</th>
          <th>City</th>
          <th>Phone no.</th>
          <th>Operations</th>
        </tr>
      </thead>
      <tbody>
        <% unless sub_accounts.blank? %>
          <% sub_accounts.each do |sub_account| %>
            <tr>
              <td><%= sub_account.full_name %></td>
              <td><%= sub_account.email %></td>
              <td><%= sub_account.city %></td>
              <td><%= sub_account.phone_number %></td>
              <td style='text-align: center;'>
                <%= link_to 'Edit', edit_borrower_sub_profile_path(sub_account), 
                  :class=>"btn btn-mini btn-primary tipsy-tooltip", "original-title" => "edit sub acount" %>
                <%= link_to 'Preview', borrower_sub_profile_path(sub_account), 
                  :class=>"btn btn-mini btn-inverse tipsy-tooltip", "original-title" => "preview sub account"%>
                <%= link_to 'Delete', borrower_sub_profile_path(sub_account), method: :delete, 
                  :class=>"btn btn-mini btn-danger tipsy-tooltip",
                  :confirm => 'Are you sure do you want to delete this account?',
                  "original-title" => "delete sub acounts" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="row_font_color"><h4>There is no records found!</h4></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
