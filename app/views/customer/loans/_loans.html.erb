<div class="widget-box">
  <label><div class="widget-title cursor-pointer">
    <span class="icon">
      <input type="checkbox" name="loan" id="online_auction_list_chk" href="#online_auction_list_div" class="toggle" />
    </span>
    <h5>Customers Sub Account Details</h5>
  </div></label>
  <div class="widget-content nopadding" id="online_auction_list_div" >
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Customer</th>
          <th>Amount</th>
          <th>Final Amount</th>
          <th>Rate</th>
          <th>Operations</th>
        </tr>
      </thead>
      <tbody>
        <% unless loans.blank? %>
          <% loans.each do |loan| %>
            <tr>
              <td><%= loan.customer.full_name %></td>
              <td><%= loan.amount %></td>
              <td><%= loan.final_amount %></td>
              <td><%= loan.rate %></td>
              <td style='text-align: center;'>
                <%= link_to 'Edit', edit_customer_sub_profile_path(loan), 
                  :class=>"btn btn-mini btn-primary tipsy-tooltip", "original-title" => "edit sub acount" %>
                <%= link_to 'Preview', customer_sub_profile_path(loan), 
                  :class=>"btn btn-mini btn-inverse tipsy-tooltip", "original-title" => "preview sub account"%>
                <%= link_to 'Delete', customer_sub_profile_path(loan), method: :delete, 
                  :class=>"btn btn-mini btn-danger tipsy-tooltip",
                  :confirm => 'Are you sure do you want to delete this account?',
                  "original-title" => "delete sub acounts" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="row_font_color"><h4>There is no records found!</h4></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
